{
  "compilerOptions": {
    "target": "ES5",
    "module": "commonjs",
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noEmitHelpers": false,
    "sourceMap": true
  },
  "files": [
    "node_modules/angular2/ts/typings/node/node.d.ts",
    "node_modules/angular2/typings/browser.d.ts",
    "./typings/tsd.d.ts",
    "./app/ts/app.ts",
    "./app/ts/components/MoreHTTPRequests.ts",
    "./app/ts/components/SimpleHTTPComponent.ts",
    "./app/ts/components/YouTubeSearchComponent.ts",
    "./app/ts/vendor.ts",
    "./test/MoreHTTPRequests.spec.ts",
    "./test/YouTubeSearchComponentAfter.spec.ts",
    "./test/YouTubeSearchComponentBefore.spec.ts"
  ],
  "filesGlob": [
    "./app/**/*.ts",
    "./test/**/*.ts",
    "!./node_modules/**/*.ts"
  ],
  "compileOnSave": false,
  "buildOnSave": false,
  "atom": {
    "rewriteTsconfig": true
  }
}
