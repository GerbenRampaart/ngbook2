{
  "compilerOptions": {
    "target": "ES5",
    "module": "commonjs",
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noEmitHelpers": false,
    "sourceMap": true
  },
  "filesGlob": [
    "./app/**/*.ts",
    "./test/**/*.ts",
    "!./node_modules/**/*.ts"
  ],
  "files": [
    "./app/ts/app.ts",
    "./app/ts/services/ApiService.ts",
    "./app/ts/services/LargeService.ts",
    "./app/ts/services/SmallService.ts",
    "./app/ts/services/ViewPortService.ts",
    "./app/ts/vendor.ts"
  ],
  "compileOnSave": false,
  "buildOnSave": false,
  "atom": {
    "rewriteTsconfig": true
  }
}
